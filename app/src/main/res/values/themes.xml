<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 기본 앱 테마 -->
    <style name="Theme.Moveon" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:colorControlHighlight">@android:color/transparent</item> <!-- Ripple 효과 제거 -->
        <item name="android:windowBackground">@color/white</item> <!-- 앱 배경색 -->
