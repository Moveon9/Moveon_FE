<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp">

    <!-- 상단 로고 -->
    <ImageView
        android:id="@+id/refresh_icon"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:src="@drawable/logo_letter"
        android:layout_marginTop="3dp"
        android:contentDescription="로고" />

    <!-- 텍스트뷰 -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이용하실 Challenge를 \n선택해주세요."
        android:textSize="23sp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_margin="60dp"/>

    <!-- 버튼 대체 레이아웃 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <!-- 버튼 1: 땅따먹기 -->
        <LinearLayout
            android:id="@+id/btnGame"
            android:layout_width="158dp"
            android:layout_height="207dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/challenge_background_green"
            android:layout_marginEnd="8dp">

            <ImageView
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:src="@drawable/ic_game"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="땅따먹기"
                android:textColor="@android:color/white"
                android:textSize="20sp"/>
        </LinearLayout>

        <!-- 버튼 2: 미니 마라톤 -->
        <LinearLayout
            android:id="@+id/btnGame2"
            android:layout_width="158dp"
            android:layout_height="207dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/challenge_background_gray"
            android:layout_marginStart="8dp">

            <ImageView
                android:layout_width="77dp"
                android:layout_height="77dp"
                android:src="@drawable/ic_shoes"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="미니 마라톤"
                android:textColor="@android:color/white"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 완료와 화살표 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <!-- 완료 텍스트와 화살표 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/btnComplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="완료"
                android:textSize="24sp"
                android:textColor="#000000"/>

            <!-- 화살표 아이콘 -->
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_correct"
                android:layout_marginStart="8dp"
                android:contentDescription="화살표" />
        </LinearLayout>

        <!-- 밑줄 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
</LinearLayout>
