<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    app:umanoDragView="@+id/dragView"
    app:umanoPanelHeight="100dp"
    app:umanoOverlay="true"
    app:umanoFadeColor="@android:color/transparent"
    app:umanoShadowHeight="0dp"
    app:umanoInitialState="collapsed">

    <!-- 메인 콘텐츠 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 지도 영역 -->
        <fragment
            android:id="@+id/map_fragment"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- 상단 제목 섹션 -->
        <LinearLayout
            android:id="@+id/header_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/todayTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="오늘 기록"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/icon_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/refresh_icon"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:src="@drawable/ic_setting"
                    android:layout_marginEnd="13dp"
                    android:layout_marginBottom="5dp"
                    android:contentDescription="설정 아이콘" />

                <ImageView
                    android:id="@+id/save_icon"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:src="@drawable/ic_box"
                    android:layout_marginEnd="13dp"
                    android:layout_marginBottom="5dp"
                    android:contentDescription="보물상자 아이콘" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <!-- Sliding Panel -->
    <LinearLayout
        android:id="@+id/dragView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="false"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/rounded_sliding_background">

        <!-- 닫힌 상태에서 표시되는 섹션 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 시간 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/timeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="달린 시간 :"
                    android:textSize="18sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/timeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- 재생 및 제어 버튼 -->
            <ImageView
                android:id="@+id/play_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_playback"
                android:contentDescription="재생 버튼"
                android:visibility="visible" /> <!-- 기본적으로 보임 -->

            <ImageView
                android:id="@+id/pause_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_pause"
                android:contentDescription="일시 정지 버튼"
                android:visibility="gone" /> <!-- 기본적으로 숨김 -->

            <ImageView
                android:id="@+id/stop_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_stop"
                android:contentDescription="정지 버튼"
                android:visibility="gone" /> <!-- 기본적으로 숨김 -->


        </LinearLayout>

        <!-- 열렸을 때 표시되는 섹션 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- 왼쪽 데이터 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="start">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="거리"
                    android:textSize="18sp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/distance_value"
                    android:text="0m"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="현재 칸의 수"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- 구분선 -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="16dp"
                android:background="#E0E0E0" />

            <!-- 오른쪽 데이터 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="start">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="심박수"
                    android:textSize="18sp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="걸음 수"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/step_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>
