<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 눌렸을 때 (터치) -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#398342" /> <!-- 터치 시 배경색 -->
            <corners android:radius="16dp" />
        </shape>
    </item>
    <!-- 기본 상태 -->
    <item>
        <shape>
            <solid android:color="#818682" /> <!-- 기본 배경색 -->
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>
